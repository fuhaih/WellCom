<UserControl x:Class="WellCom.ComControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WellCom"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <StackPanel Width="300" DockPanel.Dock="Left">
            <GroupBox Height="200" VerticalAlignment="Top" Header="串口设置" Margin="5,5,5,0">
                <ComboBox Height="20" VerticalAlignment="Top" Margin="10"></ComboBox>
            </GroupBox>
            <GroupBox Height="100" VerticalAlignment="Top" Header="接收设置" Margin="5,5,5,0">
                <RadioButton></RadioButton>
            </GroupBox>
            <GroupBox Height="160" VerticalAlignment="Top" Header="发送设置" Margin="5,5,5,0">
                <RadioButton></RadioButton>
            </GroupBox>
        </StackPanel>
        <ContentControl>
            <RichTextBox></RichTextBox>
        </ContentControl>
    </DockPanel>
</UserControl>
